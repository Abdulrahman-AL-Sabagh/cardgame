<html>

<head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="/css/bubble.css">
    <link rel="stylesheet" href="/css/style.css">



    <style>
        html {
            list-style: none;
            margin: 0;
            padding: 0;
        }
        
        form {
            margin: auto;
        }
        
        main {
            background-color: rgba(255,255,255,.9);
            margin: auto;
            width: 40vw;
            text-align: center;
            border-radius: 20px;
            border: black 2px solid;
        }
        
        main div {
            width: 100%;
            border-radius: 17px;
            color: black;
            text-align: center;
            display: inline-block;
            padding: 20px 0 20px 0;
            height: auto;
        }
        
        main div h1 {
            font-size: 2em;
            margin: auto;
            margin-top: 8%;
            color: white;
            margin: 10px;
        }
        
        #button {
            padding: 1em;
            color: white;
            z-index: 1;
            border: 0;
            box-shadow: 5px 5px 5px rgba(0, 0, 0, .7);
            transition: box-shadow .3s;
            margin-bottom: 30px;
        }
        
        #button:active {
            box-shadow: 0 0 0;
            border: 0;
        }
        
        #list {
            text-align: center;
        }
        
        #list .hint {
            font-size: 30px;
            text-align: center;
            list-style: none;
            margin-bottom: 10%;
            margin-right: 35px;
        }
    </style>
</head>

<body>
    <ul class="bubbles">
        <li class="form"></li>
        <li class="form"></li>
        <li class="form"></li>
        <li class="form"></li>
        <li class="form"></li>
        <li class="form"></li>
        <li class="form"></li>
        <li class="form"></li>
        <li class="form"></li>
        <li class="form"></li>
    </ul>
    <main id="card">
        <form action="/game" method="post">


            <div id="header">
                <%console.log(card)%>
                    <h1 id="h1">
                        <%=card.title%>
                    </h1>
            </div>
            <ul id="list">
                <li class="hint">
                    <%=card.hints[0]%>
                </li>
                <li class="hint">
                    <%=card.hints[1]%>
                </li>
                <li class="hint">
                    <%=card.hints[2]%>
                </li>
            </ul>
            <h1 id="timer"></h1>
            <button id="button" type="submit" name="cardNumber" value="<%=card.number%>" onclick="newCard(variable)">change</button>

    </main>

    </form>

</body>
<script src="./index.js" defer></script>

</html>